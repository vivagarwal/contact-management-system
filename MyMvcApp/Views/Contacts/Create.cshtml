@model ContactManagementApp.Models.Contact

<h2>Add New Contact</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Name:</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>Email:</label>
        <input asp-for="Email" />
    </div>
    <div>
        <label>Phone:</label>
        <input asp-for="Phone" />
    </div>
    <button type="submit">Create</button>
</form>
